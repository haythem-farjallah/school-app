    {
      "name": "Profile Settings",
      "item": [
        {
          "name": "Get current user settings",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{TOKEN}}" }
            ],
            "url": "{{HOST}}/api/me/settings"
          }
        },
        {
          "name": "Update current user settings",
          "request": {
            "method": "PATCH",
            "header": [
              { "key": "Authorization", "value": "Bearer {{TOKEN}}" },
              { "key": "Content-Type",  "value": "application/json" }
            ],
            "url": "{{HOST}}/api/me/settings",
            "body": {
              "mode": "raw",
